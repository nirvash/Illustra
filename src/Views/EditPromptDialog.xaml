<Window x:Class="Illustra.Views.EditPromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Illustra.Views"
        mc:Ignorable="d"
        Title="{DynamicResource String_Dialog_EditPrompt}"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- プロンプト編集エリア -->
        <TextBox Grid.Row="0"
                 x:Name="PromptTextBox"
                 Text="{Binding PromptText}"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,10"/>

        <!-- ボタンエリア -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="{DynamicResource String_Common_Cancel}"
                    Width="80"
                    Height="25"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"/>
            <Button Content="{DynamicResource String_Common_Save}"
                    Width="80"
                    Height="25"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
