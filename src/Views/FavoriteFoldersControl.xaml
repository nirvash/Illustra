                        <!-- ãƒ•ã‚©ãƒ«ãƒ€åã‚’è¡¨ç¤º -->
                        <!-- è¡¨ç¤ºåã‚’ DisplayMember ã«ãƒã‚¤ãƒ³ãƒ‰ -->
                        <TextBlock Text="{Binding DisplayMember}"/>
                    </StackPanel>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
