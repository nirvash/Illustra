<Window x:Class="Illustra.Views.ImageGenerationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Illustra.Controls"
        mc:Ignorable="d"
        Title="{DynamicResource String_ImageGeneration_Title}"
        Height="350"
        Width="500"
        MinHeight="250"
        MinWidth="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Topmost="False"
        WindowStyle="ToolWindow"
        Closing="Window_Closing">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- サーバURL設定 -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/> <!-- Reforgeパス設定 -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/> <!-- ★ タグ入力欄を可変サイズに変更 -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>  <!-- 生成ボタン -->
        </Grid.RowDefinitions>

        <!-- サーバURL設定 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{DynamicResource String_ImageGeneration_ServerUrl}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <TextBox Grid.Column="1"
                     x:Name="ServerUrlTextBox"
                     Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!-- Reforgeパス設定 -->
        <Grid Grid.Row="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{DynamicResource String_ImageGeneration_ReforgePath}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <TextBox Grid.Column="1"
                     x:Name="ReforgePathTextBox"
                     Text="{Binding ReforgePath, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Grid.Column="2"
                    Content="{DynamicResource String_ImageGeneration_Browse}"
                    Margin="5,0,0,0"
                    Padding="10,0"
                    Click="BrowseButton_Click"/>
        </Grid>

        <!-- プロンプト編集エリア -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{DynamicResource String_ImageGeneration_Tags}"
                          Margin="0,5,0,5"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                           Orientation="Horizontal"
                           Margin="10,0,0,0">
                    <Button Content="✚"
                            Command="{Binding AddEditorCommand}"
                            ToolTip="Add Editor"
                            Style="{DynamicResource EditorControlButtonStyle}"/>
                    <Button Content="✖"
                            Command="{Binding CloseEditorCommand}"
                            CommandParameter="{Binding ActiveEditor}"
                            ToolTip="Close Editor"
                            Style="{DynamicResource EditorControlButtonStyle}"/>
                </StackPanel>
            </Grid>

            <controls:PromptEditorControl Grid.Row="1"
                                        x:Name="PromptEditor"
                                        DataContext="{Binding ActiveEditor}"
                                        MinHeight="100"
                                        Margin="0,0,0,10"
                                        VerticalAlignment="Stretch"/>
        </Grid>

        <!-- 生成ボタン -->
        <Button Grid.Row="6"
                Content="{DynamicResource String_ImageGeneration_Generate}"
                HorizontalAlignment="Right"
                MinWidth="100"
                Padding="20,5"
                Click="GenerateButton_Click"/>
    </Grid>
</Window>
