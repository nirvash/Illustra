<UserControl x:Class="Illustra.Views.ThumbnailListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vw="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
             xmlns:viewmodels="clr-namespace:Illustra.ViewModels"
             xmlns:helpers="clr-namespace:Illustra.Helpers"
             xmlns:local="clr-namespace:Illustra.Controls"
             xmlns:converters="clr-namespace:Illustra.Converters"
             xmlns:dd="urn:gong-wpf-dragdrop"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <helpers:RatingToStarsConverter x:Key="RatingToStarsConverter"/>
        <helpers:RatingToStarWithNumberConverter x:Key="RatingToStarWithNumberConverter"/>
        <helpers:RatingToColorConverter x:Key="RatingToColorConverter"/>
        <helpers:RatingToTextColorConverter x:Key="RatingToTextColorConverter"/>
        <helpers:RatingToVisibilityConverter x:Key="RatingToVisibilityConverter"/>
        <helpers:IndexToXMultiConverter  x:Key="IndexToXMultiConverter"/>
        <helpers:IndexToYMultiConverter  x:Key="IndexToYMultiConverter"/>
        <helpers:IndexToZIndexConverter  x:Key="IndexToZIndexConverter"/>
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>

        <!-- ãƒ¬ãƒ¼ãƒ†ã‚£ãƒ³ã‚°ã‚¹ã‚¿ãƒ¼ãƒœã‚¿ãƒ³ã‚¹ã‚¿ã‚¤ãƒ« -->
        <Style x:Key="RatingStarButton"
               TargetType="Button">
            <Setter Property="Margin"
                    Value="2,0"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="0"/>
        </Style>

        <!-- ãƒ•ã‚§ãƒ¼ãƒ‰ã‚¤ãƒ³/ã‚¢ã‚¦ãƒˆã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ -->
        <Storyboard x:Key="ShowNotificationStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.15"
                             BeginTime="0:0:1"/>
        </Storyboard>

    </UserControl.Resources>

    <UserControl.DataContext>
        <viewmodels:MainViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ã‚µãƒ ãƒã‚¤ãƒ«ã‚µã‚¤ã‚ºèª¿æ•´ç”¨ã®ã‚¹ãƒ©ã‚¤ãƒ€ãƒ¼ -->
        <Grid Grid.Row="0"
              Margin="5"
              KeyboardNavigation.TabNavigation="None">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- ã‚µãƒ ãƒã‚¤ãƒ«ã‚µã‚¤ã‚º -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <!-- ãƒ¬ãƒ¼ãƒ†ã‚£ãƒ³ã‚°ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼ -->
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="0">
                <TextBlock Text="{DynamicResource String_Thumbnail_Size}"
                           VerticalAlignment="Center"
                           Margin="5,0,5,0"/>
                <TextBlock x:Name="ThumbnailSizeText"
                           Text="120"
                           VerticalAlignment="Center"
                           Margin="5,0,5,0"/>
                <Slider x:Name="ThumbnailSizeSlider"
                        Width="150"
                        Minimum="60"
                        Maximum="400"
                        Value="120"
                        TickFrequency="20"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        Focusable="False"
                        Style="{DynamicResource FlatSlider}"
                        ValueChanged="ThumbnailSizeSlider_ValueChanged"
                        Thumb.DragCompleted="ThumbnailSizeSlider_DragCompleted"/>
            </StackPanel>

            <!-- ãƒ¬ãƒ¼ãƒ†ã‚£ãƒ³ã‚°ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼  -->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="2">
                <TextBlock Text="{DynamicResource String_Thumbnail_Rating}"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,5,0">
                    <Button Tag="1"
                            Click="RatingFilter_Click"
                            x:Name="Filter1"
                            ToolTip="{DynamicResource String_Thumbnail_RatingFilter}"
                            Style="{StaticResource RatingStarButton}"
                            Focusable="False"
                            Padding="1">
                        <local:RatingStarControl RatingValue="1"
                                                 Height="18"
                                                 Width="18"
                                                 DisplayMode="Multiple"
                                                 CurrentRating="{Binding CurrentRatingFilter}"/>
                    </Button>
                    <Button Tag="2"
                            Click="RatingFilter_Click"
                            x:Name="Filter2"
                            ToolTip="{DynamicResource String_Thumbnail_RatingFilter}"
                            Style="{StaticResource RatingStarButton}"
                            Focusable="False"
                            Padding="1">
                        <local:RatingStarControl RatingValue="2"
                                                 Height="18"
                                                 Width="18"
                                                 DisplayMode="Multiple"
                                                 CurrentRating="{Binding CurrentRatingFilter}"/>
                    </Button>
                    <Button Tag="3"
                            Click="RatingFilter_Click"
                            x:Name="Filter3"
                            ToolTip="{DynamicResource String_Thumbnail_RatingFilter}"
                            Style="{StaticResource RatingStarButton}"
                            Focusable="False"
                            Padding="1">
                        <local:RatingStarControl RatingValue="3"
                                                 Height="18"
                                                 Width="18"
                                                 DisplayMode="Multiple"
                                                 CurrentRating="{Binding CurrentRatingFilter}"/>
                    </Button>
                    <Button Tag="4"
                            Click="RatingFilter_Click"
                            x:Name="Filter4"
                            ToolTip="{DynamicResource String_Thumbnail_RatingFilter}"
                            Style="{StaticResource RatingStarButton}"
                            Focusable="False"
                            Padding="1">
                        <local:RatingStarControl RatingValue="4"
                                                 Height="18"
                                                 Width="18"
                                                 DisplayMode="Multiple"
                                                 CurrentRating="{Binding CurrentRatingFilter}"/>
                    </Button>
                    <Button Tag="5"
                            Click="RatingFilter_Click"
                            x:Name="Filter5"
                            ToolTip="{DynamicResource String_Thumbnail_RatingFilter}"
                            Style="{StaticResource RatingStarButton}"
                            Focusable="False"
                            Padding="1">
                        <local:RatingStarControl RatingValue="5"
                                                 Height="18"
                                                 Width="18"
                                                 DisplayMode="Multiple"
                                                 CurrentRating="{Binding CurrentRatingFilter}"/>
                    </Button>
                </StackPanel>
                <Button Content="{DynamicResource String_Thumbnail_ClearFilter}"
                        Click="ClearFilter_Click"
                        Margin="0,0,5,0"
                        x:Name="ClearFilterButton"
                        Focusable="False"
                        IsEnabled="{Binding IsRatingFilterActive}"/>
                <!-- ã‚½ãƒ¼ãƒˆãƒœã‚¿ãƒ³ -->
                <Button x:Name="SortToggleButton"
                        Click="SortToggle_Click"
                        Margin="0,0,5,0"
                        Focusable="False"
                        ToolTip="{DynamicResource String_Thumbnail_SortToggleTooltip}">
                    <TextBlock Text="{DynamicResource String_Thumbnail_SortAscending}"
                               x:Name="SortDirectionText"/>
                </Button>
                <Button x:Name="SortTypeToggleButton"
                        Click="SortTypeToggle_Click"
                        MinWidth="50"
                        Margin="0,0,5,0"
                        Focusable="False"
                        ToolTip="{DynamicResource String_Thumbnail_SortTypeToggleTooltip}">
                    <TextBlock Text="{DynamicResource String_Thumbnail_SortByDate}"
                               x:Name="SortTypeText"/>
                </Button>
            </StackPanel>
        </Grid>

        <ListView x:Name="ThumbnailItemsControl"
                           Grid.Row="1"
                           ItemsSource="{Binding FilteredItems}"
                           SelectionMode="Extended"
                           IsSynchronizedWithCurrentItem="True"
                           Loaded="ThumbnailItemsControl_Loaded"
                           ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                           ScrollViewer.CanContentScroll="True"
                           ScrollViewer.PanningMode="VerticalOnly"
                           ScrollViewer.IsDeferredScrollingEnabled="False"
                           VirtualizingPanel.IsVirtualizing="True"
                           VirtualizingPanel.VirtualizationMode="Recycling"
                           VirtualizingPanel.ScrollUnit="Pixel"
                           BorderThickness="0"
                           AllowDrop="True"
                           dd:DragDrop.IsDragSource="True"
                           dd:DragDrop.IsDropTarget="True"
                           KeyboardNavigation.TabNavigation="None"
                           IsTabStop="True"
                           TabIndex="3"
                           FocusVisualStyle="{x:Null}"
                           PreviewMouseWheel="ThumbnailItemsControl_PreviewMouseWheel">
                    <ListView.Template>
                        <ControlTemplate TargetType="ListView">
                            <Border BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <ScrollViewer x:Name="ScrollViewer"
                                            Focusable="False">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </Border>
                        </ControlTemplate>
                    </ListView.Template>
            <dd:DragDrop.DragAdornerTemplate>
                <DataTemplate>
                    <Border BorderBrush="#AA000000"
                            BorderThickness="1"
                            Width="120"
                            Height="120"
                            Margin="0 0 0 20">
                        <Image Source="{Binding ThumbnailInfo.Image}"
                               Width="120"
                               Height="120"
                               Stretch="UniformToFill"/>
                    </Border>
                </DataTemplate>
            </dd:DragDrop.DragAdornerTemplate>

            <dd:DragDrop.DragAdornerMultiItemTemplate>
                <DataTemplate>
                    <ItemsControl ItemsSource="{Binding Items}"
                                  AlternationCount="100">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="130"
                                        Height="130"
                                        Margin="0 10 0 0"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#AA000000"
                                        BorderThickness="1"
                                        Width="100"
                                        Height="100">
                                    <Image Source="{Binding ThumbnailInfo.Image}"
                                           Width="100"
                                           Height="100"
                                           Stretch="UniformToFill"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left">
                                    <Setter.Value>
                                        <MultiBinding Converter="{StaticResource IndexToXMultiConverter}">
                                            <Binding Path="(ItemsControl.AlternationIndex)"
                                                     RelativeSource="{RelativeSource Self}"/>
                                            <Binding Source="0"/>
                                            <!-- Xæ–¹å‘ã®ã‚ªãƒ•ã‚»ãƒƒãƒˆå€¤ -->
                                            <Binding Source="5"/>
                                            <!-- å€çŽ‡ï¼ˆã‚¹ã‚±ãƒ¼ãƒ«ï¼‰ -->
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>

                                <Setter Property="Canvas.Top">
                                    <Setter.Value>
                                        <MultiBinding Converter="{StaticResource IndexToYMultiConverter}">
                                            <Binding Path="(ItemsControl.AlternationIndex)"
                                                     RelativeSource="{RelativeSource Self}"/>
                                            <Binding Source="0"/>
                                            <!-- Yæ–¹å‘ã®ã‚ªãƒ•ã‚»ãƒƒãƒˆå€¤ -->
                                            <Binding Source="5"/>
                                            <!-- å€çŽ‡ï¼ˆã‚¹ã‚±ãƒ¼ãƒ«ï¼‰ -->
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>

                                <!-- ZIndexã®è¨­å®šã‚’è¿½åŠ  -->
                                <Setter Property="Panel.ZIndex">
                                    <Setter.Value>
                                        <Binding Path="(ItemsControl.AlternationIndex)"
                                                 RelativeSource="{RelativeSource Self}"
                                                 Converter="{StaticResource IndexToZIndexConverter}"/>
                                    </Setter.Value>
                                </Setter>

                                <!-- ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚¢ãƒ©ã‚¤ãƒ¡ãƒ³ãƒˆè¨­å®šã‚’è¿½åŠ  -->
                                <Setter Property="HorizontalAlignment"
                                        Value="Center"/>
                                <Setter Property="VerticalAlignment"
                                        Value="Center"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>
                </DataTemplate>
            </dd:DragDrop.DragAdornerMultiItemTemplate>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <vw:VirtualizingWrapPanel
                        Orientation="Vertical"
                        SpacingMode="Uniform"
                        IsVirtualizing="True"
                        VirtualizationMode="Recycling"
                        CacheLength="1,1"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding"
                            Value="0"/>
                    <Setter Property="Margin"
                            Value="3,3,3,20"/>
                    <Setter Property="BorderThickness"
                            Value="1"/>
                    <Setter Property="Background"
                            Value="Transparent"/>
                    <Setter Property="KeyboardNavigation.TabNavigation"
                            Value="None"/>
                    <Setter Property="FocusVisualStyle"
                            Value="{x:Null}"/>
                    <Setter Property="VirtualizingPanel.IsVirtualizing"
                            Value="True"/>
                    <Setter Property="VirtualizingPanel.VirtualizationMode"
                            Value="Recycling"/>
                    <Setter Property="VerticalContentAlignment"
                            Value="Center"/>
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center"/>
                    <EventSetter Event="MouseDoubleClick"
                                 Handler="Thumbnail_MouseDoubleClick"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Grid>
                                    <!-- é€šå¸¸ã®å¢ƒç•Œç·šï¼ˆå¸¸ã«1ãƒ”ã‚¯ã‚»ãƒ«ï¼‰ -->
                                    <Border x:Name="NormalBorder"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{DynamicResource MahApps.Brushes.CustomBorder}"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <!-- é¸æŠžæ™‚ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆå¢ƒç•Œç·šï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ¬ã‚¤ï¼‰ -->
                                    <Border x:Name="SelectionBorder"
                                            BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                            BorderThickness="2"
                                            CornerRadius="5"
                                            Opacity="0">
                                    </Border>
                                    <!-- æœ€å¾Œã«é¸æŠžã•ã‚ŒãŸã‚¢ã‚¤ãƒ†ãƒ ã®è¿½åŠ ãƒã‚¤ãƒ©ã‚¤ãƒˆ -->
                                    <Border x:Name="LastSelectedBorder"
                                            BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                            BorderThickness="3"
                                            CornerRadius="5"
                                            Opacity="0">
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Setter TargetName="SelectionBorder"
                                                Property="Opacity"
                                                Value="1"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsLastSelected}"
                                                 Value="True">
                                        <Setter TargetName="LastSelectedBorder"
                                                Property="Opacity"
                                                Value="1"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#0F000000"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Width="{Binding ElementName=ThumbnailSizeSlider, Path=Value}"
                            Height="{Binding ElementName=ThumbnailSizeSlider, Path=Value}"
                            BorderThickness="0">
                        <Grid>
                            <Image Source="{Binding ThumbnailInfo.Image}"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="2"/>
                            <TextBlock Text="{Binding FileName}"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        Margin="2,0,2,-20"
                                        Padding="2"
                                        Foreground="{DynamicResource MahApps.Brushes.TextForegroundMuted}"
                                        Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                                        TextAlignment="Center"
                                        TextTrimming="CharacterEllipsis"/>
                            <!-- å‹•ç”»ã‚¢ã‚¤ã‚³ãƒ³ -->
                            <TextBlock Text="ðŸŽžï¸"
                                     FontSize="14"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Margin="0,2,2,0"
                                     Foreground="White"
                                     Visibility="{Binding IsAnimated, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black"
                                                    Direction="315"
                                                    ShadowDepth="1"
                                                    BlurRadius="2"
                                                    Opacity="0.7"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <!-- ãƒ¬ãƒ¼ãƒ†ã‚£ãƒ³ã‚°è¡¨ç¤ºéƒ¨åˆ†ã®ã¿ã‚’æ›´æ–° -->
                            <Grid HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  Visibility="{Binding Rating, Converter={StaticResource RatingToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
                                <!-- SVGæ˜Ÿãƒžãƒ¼ã‚¯ -->
                                <local:RatingStarControl
                                    x:Name="RatingStarMark"
                                    RatingValue="{Binding Rating, UpdateSourceTrigger=PropertyChanged}"
                                    DisplayMode="Single"
                                    StrokeColor="White"
                                    Width="22"
                                    Height="22"
                                    Margin="2">
                                    <local:RatingStarControl.Effect>
                                        <DropShadowEffect Color="Black"
                                                          Direction="315"
                                                          ShadowDepth="1"
                                                          BlurRadius="2"
                                                          Opacity="0.7"/>
                                    </local:RatingStarControl.Effect>
                                </local:RatingStarControl>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- çŠ¶æ…‹é€šçŸ¥ã‚ªãƒ¼ãƒãƒ¼ãƒ¬ã‚¤ -->
        <Border x:Name="Notification"
                Grid.Row="1"
                MinWidth="150"
                Height="100"
                MaxWidth="400"
                Background="#CC000000"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0"
                Padding="16,8"
                Panel.ZIndex="1000"
                IsHitTestVisible="False">
            <Grid>
                <TextBlock x:Name="NotificationText"
                           Text=""
                           FontSize="24"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           MaxWidth="380"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
