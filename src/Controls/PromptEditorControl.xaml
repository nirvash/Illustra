<UserControl x:Class="Illustra.Controls.PromptEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Illustra.Controls"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="800">

    <!-- タグ表示エリア -->
    <ListBox x:Name="TagListBox"
             ItemsSource="{Binding Tags}"
             SelectionMode="Extended"
             AllowDrop="True"
             Drop="TagListBox_Drop"
             DragEnter="TagListBox_DragEnter"
             DragOver="TagListBox_DragOver"
             PreviewMouseMove="TagListBox_PreviewMouseMove">

        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>

        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border BorderThickness="1"
                        BorderBrush="{Binding Category.BorderColor}"
                        Background="{Binding Category.BackgroundColor}"
                        CornerRadius="3"
                        Margin="2"
                        Padding="5,2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Text}"
                                 Foreground="{Binding TextColor}"
                                 Margin="0,0,5,0"/>
                        <Button Content="×"
                                Command="{Binding DeleteCommand}"
                                Style="{DynamicResource TagDeleteButtonStyle}"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
